{
  "manifest_version": 3,
  "name": "Canvas Chrome Extension",
  "version": "1.0",
  "description": "Track changes in Canvas since your last login and manage your tasks efficiently.",
  "permissions": [
    "identity",
    "storage"
  ],
  "host_permissions": [
    "*://canvas.instructure.com/*"
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://canvas.instructure.com/*"],
      "js": ["content/content.js"]
    }
  ]
}